<script>
  // Send a GET request to the /api/dailystatus endpoint
  fetch('/api/dailystatus')
    .then(response => response.json())
    .then(data => {
      // Check the response from the server
      if (data.text === '1') {
        // Show the "dailycoins" div if the server returns { "text": "1" }
        document.getElementById('dailycoins').style.display = 'block';
      } else {
        document.getElementById('dailycoins').style.display = 'none';
      }
    })
    .catch(error => console.error('Error:', error));
</script>
